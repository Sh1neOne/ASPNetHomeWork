@model Product

<div>
    <h2>Добавить запись</h2>
    <div>
        <form asp-controller="Productions" asp-action="Edit" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />

            <div asp-validation-summary="All"></div>
            <div class="div-box">
                <label asp-for="Name"></label>
                <input asp-for="Name" />
                <span asp-validation-for="Name"></span>
            </div>
            <div class="div-box">
                <label asp-for="Description"></label>
                <input asp-for="Description" />
            </div>
            <div class="div-box">
                <label asp-for="Image"></label>
                @if (Model.Image != null)
                {
                    <img style='width:80px; height:60px;' src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.Image))" />
                }
                <input type="file" name="imageData" id="imageData" />
            </div>
            <input type="submit" value="Сохранить" />
        </form>
    </div>
</div>